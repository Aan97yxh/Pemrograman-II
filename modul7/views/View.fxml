<AnchorPane prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PelangganController">

    <children>

        <!-- HEADER -->
        <Label layoutX="263.0" layoutY="-1.0" text="Toko Buku Aan" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Separator layoutX="3.0" layoutY="27.0" prefWidth="690.0" />

        <!-- TABPANE -->
