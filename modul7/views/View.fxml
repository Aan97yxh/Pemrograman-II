                                <Label layoutX="23.0" layoutY="171.0" text="Tanggal Beli:" />
                                <DatePicker fx:id="dateBeli" layoutX="113.0" layoutY="167.0" prefHeight="26.0" prefWidth="144.0" promptText="dd/mm/yyyy" />

                                <!-- Tombol CRUD penjualan -->
                                <HBox layoutX="297.0" layoutY="167.0" spacing="10">
                                    <children>
                                        <Button fx:id="btnAddPenjualan" prefWidth="90.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Jual" />
                                        <Button fx:id="btnDeletePenjualan" prefWidth="90.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" text="Delete" />
                                        <Button fx:id="btnClearPenjualan" prefWidth="90.0" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-weight: bold;" text="Clear" />
                                    </children>
                                </HBox>

                                <Separator layoutX="14.0" layoutY="223.0" prefHeight="3.0" prefWidth="670.0" />

                                <!-- Tabel penjualan -->
                                <TableView fx:id="tblPenjualan" layoutX="14.0" layoutY="234.0" prefHeight="215.0" prefWidth="674.0">
                                    <columns>
                                        <TableColumn fx:id="colPenjualanId" prefWidth="60.0" text="ID" />
                                        <TableColumn fx:id="colJumlahPenjualan" prefWidth="80.0" text="Jumlah" />
                                        <TableColumn fx:id="colTotalPenjualan" prefWidth="140.0" text="Total Harga" />
                                        <TableColumn fx:id="colTanggalPenjualan" prefWidth="140.0" text="Tanggal" />
                                        <TableColumn fx:id="colPelangganIdPenjualan" prefWidth="120.0" text="Pelanggan ID" />
                                        <TableColumn fx:id="colBukuIdPenjualan" prefWidth="110.0" text="Buku ID" />
                                    </columns>
                                </TableView>

                                <Label fx:id="lblTotalPenjualan" layoutX="18.0" layoutY="454.0" style="-fx-font-weight: bold; -fx-text-fill: #555;" text="Total Data: 0" />
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

            </tabs>
        </TabPane>

    </children>
</AnchorPane>
